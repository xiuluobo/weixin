<!--image.wxml-->
<view >
    <view bindlongtap = "onlongclick">
        <image class = "bigImage" mode="aspectFill" src="{{url}}" />
    </view>
    <modal title="是否保存？" confirm-text="保存" cancel-text="取消" data-url="{{url}}" 
        hidden="{{modalHidden}}" bindconfirm="onSaveClick" bindcancel="onCancelClick">
    </modal>
</view>